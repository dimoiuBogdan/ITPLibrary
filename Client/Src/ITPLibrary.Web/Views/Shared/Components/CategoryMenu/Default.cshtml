@model IEnumerable<CategoryModel>

    <li class="dropdown">
        <a asp-controller="Book" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Book" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </li>
            }
        </ul>
    </li>